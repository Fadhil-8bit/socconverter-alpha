@model socconvertor.Models.Home.HomeDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    var crumbs = new List<socconvertor.Models.BreadcrumbItem>
    {
        new socconvertor.Models.BreadcrumbItem { Text = "Dashboard", Active = true }
    };
}

@await Html.PartialAsync("_Breadcrumb", crumbs)

<div class="container mt-2">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success:</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4 g-3">
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Sessions</h5>
                    <h2 class="text-primary">@Model.TotalSessions</h2>
                    <p class="text-muted mb-2">Total session folders</p>
                    <a class="btn btn-outline-primary btn-sm" href="@Url.Action("InitiateManual", "BulkEmail")">
                        <i class="bi bi-collection"></i> Select Sessions
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">PDF Files</h5>
                    <h2 class="text-success">@Model.TotalPdfs</h2>
                    <p class="text-muted mb-2">Split output files</p>
                    <a class="btn btn-outline-success btn-sm" href="@Url.Action("Index", "Pdf")">
                        <i class="bi bi-upload"></i> Upload & Split
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Storage Used</h5>
                    <h2 class="text-info">@Model.TotalSizeFormatted</h2>
                    <p class="text-muted mb-2">PDF aggregate size</p>
                    <a class="btn btn-outline-info btn-sm" href="@Url.Action("Initiate", "BulkEmail", new { folderId = (Model.RecentSessions.FirstOrDefault()?.Id ?? "") })" disabled="@(Model.RecentSessions.Count == 0)">
                        <i class="bi bi-envelope"></i> Quick Bulk Email
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Actions</h5>
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Index", "Pdf")"><i class="bi bi-upload"></i> Upload PDF</a>
                        <a class="btn btn-success btn-sm" href="@Url.Action("InitiateManual", "BulkEmail")"><i class="bi bi-collection"></i> Select Sessions</a>
                        @if (Model.RecentSessions.Any())
                        {
                            <a class="btn btn-warning btn-sm" href="@Url.Action("Initiate", "BulkEmail", new { folderId = Model.RecentSessions.First().Id })"><i class="bi bi-envelope"></i> Bulk Email Latest</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Recent Sessions</h5>
            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("InitiateManual", "BulkEmail")">View All</a>
        </div>
        <div class="card-body">
            @if (!Model.RecentSessions.Any())
            {
                <div class="text-muted">No sessions found yet. Upload a PDF to get started.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Session ID</th>
                                <th>PDFs</th>
                                <th>Size</th>
                                <th>Last Modified</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model.RecentSessions)
                            {
                                <tr>
                                    <td><code>@s.Id</code></td>
                                    <td>@s.PdfCount</td>
                                    <td>@s.TotalSizeFormatted</td>
                                    <td>@s.LastModifiedUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a class="btn btn-outline-primary" href="@Url.Action("ViewSession", "Pdf", new { folderId = s.Id })"><i class="bi bi-eye"></i></a>
                                            <a class="btn btn-outline-success" href="@Url.Action("DownloadAll", "Pdf", new { folderId = s.Id })"><i class="bi bi-download"></i></a>
                                            <a class="btn btn-outline-warning" href="@Url.Action("Initiate", "BulkEmail", new { folderId = s.Id })"><i class="bi bi-envelope"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

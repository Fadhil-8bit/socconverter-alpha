@model PdfReaderDemo.Models.BulkEmail.SelectSessionsViewModel
@{
    ViewData["Title"] = "Bulk Email - Select Sessions";
}

<div class="container mt-4">
    <h2>Select Session Folders</h2>
    <p class="text-muted">Pick one or more session folders from wwwroot/Temp to merge and send by email.</p>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@err.ErrorMessage</div>
            }
        </div>
    }

    <form method="post" asp-action="InitiateManual">
        <div class="card mb-3">
            <div class="card-header">Available Sessions (@Model.AvailableSessionIds.Count)</div>
            <div class="card-body">
                @if (Model.AvailableSessionIds.Count == 0)
                {
                    <div class="text-muted">No sessions found in wwwroot/Temp.</div>
                }
                else
                {
                    <div class="row row-cols-1 row-cols-md-2 g-2">
                        @for (int i = 0; i < Model.AvailableSessionIds.Count; i++)
                        {
                            var id = Model.AvailableSessionIds[i];
                            <div class="col">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="SelectedSessionIds" id="sid_@i" value="@id" />
                                    <label class="form-check-label" for="sid_@i">
                                        <code>@id</code>
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Scan and Group Files
            </button>
            <a href="@Url.Action("Index", "Pdf")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

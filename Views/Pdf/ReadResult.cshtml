@{
    ViewData["Title"] = "PDF Extracted Data";
}

<h2>Extracted SOA Data</h2>

@if (ViewBag.Records is IEnumerable<object> records && records.Any())
{
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>Date</th>
                <th>Account Code</th>
                <th>Page No</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in ViewBag.Records)
            {
                <tr>
                    <td>@record.Date</td>
                    <td>@record.AccountCode</td>
                    <td>@record.PageNumber</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p style="color:red">No valid data found in the PDF.</p>
}

<a asp-action="Index" asp-controller="Pdf" class="btn btn-primary">Back</a>

@model List<socconvertor.Models.SplitFileResult>
@{
    var folderId = ViewBag.FolderId as string;
    var crumbs = new List<socconvertor.Models.BreadcrumbItem>
    {
        new socconvertor.Models.BreadcrumbItem { Text = "Dashboard", Controller = "Home", Action = "Index" },
        new socconvertor.Models.BreadcrumbItem { Text = "Upload", Controller = "Pdf", Action = "Index" },
        new socconvertor.Models.BreadcrumbItem { Text = "Split Result", Active = true }
    };
}

@await Html.PartialAsync("_Breadcrumb", crumbs)

<h2>Split PDFs</h2>

<div class="d-flex flex-wrap gap-2 mb-3 align-items-center">
    <a class="btn btn-primary" href="@Url.Action("DownloadAll", "Pdf", new { folderId = folderId })">
        <i class="bi bi-download"></i> Download All
    </a>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Pdf")">
        <i class="bi bi-upload"></i> Upload Another PDF
    </a>
</div>

<table class="table mt-3">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Code</th>
            <th>Type</th>
            <th>Download</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.FileName</td>
                <td>@file.Code</td>
                <td>@file.Type</td>
                <td>
                    <a class="btn btn-sm btn-success" href="@Url.Action("Download", "Pdf", new { fileName = file.FileName, folderId = folderId })">
                        <i class="bi bi-download"></i> Download
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

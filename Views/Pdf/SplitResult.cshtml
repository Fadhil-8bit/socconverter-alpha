@model List<PdfReaderDemo.Models.SplitFileResult>

@{
    var folderId = ViewBag.FolderId as string;
}

<h2>Split PDFs</h2>

<div class="mb-3">
    <a class="btn btn-primary" href="@Url.Action("DownloadAll", "Pdf", new { folderId = folderId })">
        <i class="bi bi-download"></i> Download All
    </a>
    <a class="btn btn-success" href="@Url.Action("Initiate", "BulkEmail", new { folderId = folderId })">
        <i class="bi bi-envelope"></i> Send Bulk Email
    </a>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Pdf")">
        <i class="bi bi-upload"></i> Upload Another PDF
    </a>
</div>

<div class="alert alert-info">
    <strong>New!</strong> Click <strong>Send Bulk Email</strong> to group these files by debtor code and send them via email.
</div>

<table class="table mt-3">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Code</th>
            <th>Type</th>
            <th>Download</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.FileName</td>
                <td>@file.Code</td>
                <td>@file.Type</td>
                <td>
                    <a class="btn btn-sm btn-success" href="@Url.Action("Download", "Pdf", new { fileName = file.FileName, folderId = folderId })">
                        <i class="bi bi-download"></i> Download
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

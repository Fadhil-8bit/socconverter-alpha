@model List<PdfReaderDemo.Models.SoaRecord>

@{
    ViewData["Title"] = "SOA Results";
}

<h2>Extracted SOA Data</h2>

@if (Model.Count == 0)
{
    <p>No Statement of Account data found.</p>
}
else
{
    <table border="1" cellpadding="5" cellspacing="0">
        <tr>
            <th>Date</th>
            <th>Account Code</th>
            <th>Page</th>
        </tr>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.Date</td>
                <td>@record.AccountCode</td>
                <td>@record.PageNumber</td>
            </tr>
        }
    </table>
}

<a href="@Url.Action("Index", "Pdf")">Upload another</a>
